{
  "name": "sleekalgo/sa-integrations-for-google-sheets",
  "description": "This plugin connects your WordPress website with Google Sheets, enabling automatic synchronization of form submissions and WooCommerce order data.",
  "type": "wp-plugin",
  "minimum-stability": "stable",
  "license": "proprietary",
  "authors": [
    {
      "name": "sleekalgo",
      "email": "team@sleekalgo.com"
    }
  ],
  "autoload": {
    "classmap": [ 
      "includes" 
    ],
    "psr-4": {
      "SAIFGS\\": "includes/",
      "SAIFGS\\Libraries\\Firebase\\JWT\\": "libraries/Firebase/JWT/src/"
    }
  },
  "require": {
    "php": "^7.4||^8.0"
  },
  "require-dev": {
    "firebase/php-jwt": "^6.10",
    "squizlabs/php_codesniffer": "^3.0",
    "wp-coding-standards/wpcs": "^2.3",
    "coenjacobs/mozart": "^0.7.1"
  },
  "config": {
    "platform": {
      "php": "7.4"
    },
    "optimize-autoloader": true
  },
  "extra": {
    "mozart": {
      "dep_namespace": "SAIFGS\\Libraries\\",
      "dep_directory": "/libraries/",
      "classmap_directory": "/libraries/classes/",
      "classmap_prefix": "SAIFGS_",
      "packages": [
        "firebase/php-jwt"
      ],
      "delete_vendor_directories": true,
      "override_autoload": {
        "firebase/php-jwt": {
          "psr-4": {
            "Firebase\\JWT\\": ""
          }
        }
      }
    }
  },
  "scripts": {
    "mozart": "vendor/bin/mozart compose",
    "setup-development": [
      "composer install",
      "composer run mozart"
    ],
    "setup-production": [
      "composer run setup-development",
      "composer install --no-dev"
    ],
    "wpcs": "./vendor/bin/phpcs --standard=WordPress --extensions=php  includes/integrations/contact-form-7/class-saifgs-listner-cf7.php",
    "wpcs:fix": "./vendor/bin/phpcbf --standard=WordPress --extensions=php  includes/integrations/contact-form-7/class-saifgs-listner-cf7.php",
    "post-install-cmd": [
      "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs"
    ],
    "post-update-cmd": [
      "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs"
    ]
  }
}
